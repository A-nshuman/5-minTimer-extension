{
    "name": "TimerXpert",
    "version": "1.0",
    "description": "A timer that begins a countdown of any number of minutes on any website.",
    "permissions": [
        "tabs",
        "storage"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png"
        }
    }
}
